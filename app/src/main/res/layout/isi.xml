<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="413dp"
        android:layout_height="396dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:text="Cek Kembali Isian Data"
                android:layout_marginBottom="16dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:text="NIK"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/isiNik"
                android:layout_width="328dp"
                android:layout_height="45dp"
                android:paddingBottom="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:text="Nama" />
            <EditText
                android:id="@+id/isiNama"
                android:layout_width="328dp"
                android:layout_height="45dp"
                android:paddingBottom="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:text="Tanggal Lahir" />
            <EditText
                android:id="@+id/isiTglLahir"
                android:layout_width="328dp"
                android:layout_height="45dp"
                android:paddingBottom="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                />

        </LinearLayout>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSimpan"
        android:layout_width="328dp"
        android:layout_height="37dp"
        android:background="@drawable/primary_rounded"
        android:paddingLeft="70dp"
        android:paddingTop="9dp"
        android:paddingRight="70dp"
        android:paddingBottom="9dp"
        android:text="Selanjutnya"
        android:textColor="@color/white"
        android:textAllCaps="false"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RelativeLayout"
        app:layout_constraintVertical_bias="0.754" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnkembali"
        android:layout_width="328dp"
        android:layout_height="37dp"
        android:background="@drawable/primary_rounded3"
        android:paddingLeft="70dp"
        android:paddingTop="9dp"
        android:paddingRight="70dp"
        android:paddingBottom="9dp"
        android:text="kembali"
        android:textColor="@color/white"
        android:textAllCaps="false"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSimpan" />

</androidx.constraintlayout.widget.ConstraintLayout>